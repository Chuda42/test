<div class="accordion accordion-flush" id="usersAccordion">

<div class="accordion accordion-flush" id="usersAccordion"></div>
  {{#each data.users}}

    <div class="accordion-item">
      <h2 class="accordion-header" id="flush-heading${product.id}">
        <div class="row">
          <div class="col-11">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#flush-collapse{{id}}" aria-expanded="false" aria-controls="flush-collapse{{id}}">
              Product Id: {{id}}. User email: {{email}}
            </button>
          </div>
          <div class="col">
            <a href="/products/{{id}}">
              <button class="btn btn-info userModifyRoleBtn" id="editUser{{id}}" userId = "{{id}}"> 
                {{role}}<i class="fa-solid fa-pen-to-square"></i>
              </button>
            </a>
          </div>
          <div class="col">
            <button class="btn btn-danger userDeleteBtn" id="userDelete{{id}}" userId = "{{id}}" >
              <i class="fa-solid fa-trash"></i>
            </button>
          </div>
        </div>
      </h2>
      <div id="flush-collapse{{id}}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{id}}"
        data-bs-parent="#usersAccordion">
        <div class="accordion-body">
          <ul>
            <li>First name: {{first_name}}</li>
            <li>Last name: {{last_name}}</li>
            <li>Rol: {{role}}</li>
          </ul>
        </div>
      </div>
    </div>

  {{/each}}

</div>

<script src="/js/users.js"></script>